<div class="row">
    <div class="col ml-1">
        <h3>Search results for: <span class="text-info font-italic">{{name}}</span></h3>

    </div>
</div>

<div class="row">
    <div class="col ml-1">
        <div class="row row-cols-3 row-cols-md-3">
            {{#each recs}}
            <div class="col mb-4">
                <div class="card h-100">
                    <img src="{{this.thumbnail.path}}/landscape_amazing.{{this.thumbnail.extension}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                    </div>
                    <a href="/details/{{this.id}}" class="btn btn-primary ml-auto    mr-3 my-2">Find out more</a>

                    <div class="card-footer">
                            <small class="text-muted">Last modified: {{this.modified}}</small>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>